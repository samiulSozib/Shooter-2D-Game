<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/home"
    tools:context=".GameOverActivity">

    <Button
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/aclonica"
        android:onClick="exit_game"
        android:textColor="#000000"
        android:id="@+id/exit_button_id"
        android:text="Exit"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#ffffff"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:fontFamily="@font/aclonica"
        android:onClick="restart_game"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:id="@+id/restart_Button_id"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Restart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:gravity="center"
        android:fontFamily="@font/aclonica"
        android:id="@+id/game_over_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/game_over"
        android:textStyle="bold|italic"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_height="100dp"/>

    <TextView
        android:gravity="center"
        android:fontFamily="@font/aclonica"
        android:id="@+id/personal_best_score_text"
        android:text="200"
        android:textStyle="bold"
        android:textColor="#00695C"
        android:textSize="22sp"
        android:layout_below="@id/game_over_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:fontFamily="@font/aclonica"
        android:id="@+id/score_text"
        android:text="200"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_below="@id/personal_best_score_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>